{
  "acompte": "acompte.*?(\\d{1,3}(?:[ .]\\d{3})*|\\d+).*?fcfa",
  "montant_fcfa": "(\\d{1,3}(?:[ .]\\d{3})*|\\d+)\\s*f\\.?\\s*cfa",
  "pourcentage": "(?:boutique|magasin|commerce)\\s*(\\d{1,3})%|(?:\\d{1,3})%\\s*(?:en\\s*ligne|de\\s*réduction|de\\s*remise)",
  "phone": "(?:tel|téléphone|appel|contact)[:\\s]*(?:\\+225\\d{8,10}|0\\d{9})",
  "email": "(?:email|mail|contact)[:\\s]*([a-z0-9._%+-]+@[a-z0-9.-]+\\.[a-z]{2,})",
  "whatsapp": "whatsapp[:\\s]*(?:\\+225\\d{8,10}|0\\d{9})",
  "iban": "(?:iban|compte)[:\\s]*([A-Z]{2}\\d{2}[A-Z0-9]{4}\\d{7}(?:[A-Z0-9]?){0,16})",
  "date_fr": "(?:date|livraison|commande)[:\\s]*(\\d{1,2}/\\d{1,2}/\\d{2,4})",
  "siret": "(?:siret|numéro)[:\\s]*(\\d{14})",
  "condition_commande": "condition.*?commande.*?(\\d+).*?fcfa",
  "nom_entreprise": "nom[:\\s]*([a-zA-Z_][a-zA-Z0-9_]*)",
  "assistant_ia": "assistant[:\\s]*([a-zA-Z]+)",
  "zone_geographique": "(yopougon|cocody|plateau|adjamé|abobo|marcory|koumassi|treichville|angré|riviera|port-bouët|attécoubé|bingerville|songon|anyama|grand-bassam|dabou)",
  "delai_livraison": "(avant\\s*\\d+h\\s*→|après\\s*\\d+h\\s*→|\\d+\\s*(?:jours?|heures?)\\s*(?:de\\s*)?(?:livraison|délai)|jour\\s*même|lendemain|24h\\s*(?:à\\s*72h|livraison)|48h\\s*(?:à\\s*72h|livraison)|72h\\s*livraison)",
  "condition_temporelle_commande": "(commande\\s*avant\\s*\\d+h\\s*→\\s*(?:jour\\s*même|livraison)|commande\\s*après\\s*\\d+h\\s*→\\s*lendemain)",
  "horaires": "(toujours\\s*ouvert|\\d+h\\s*à\\s*\\d+h|24h/7j|24h\\s*/\\s*7j)",
  "secteur_activite": "secteur[:\\s]*([a-zA-Z\\s&]+)",
  "mission_entreprise": "mission[:\\s]*([^.]+)",
  "tarif_livraison": "tarif[:\\s]*(\\d+(?:\\s*-\\s*\\d+)?\\s*fcfa)",
  "zones_couvertes": "zones?\\s*couvertes?[:\\s]*([^\\n]+)",
  "modes_paiement": "modes?\\s*de\\s*paiement[:\\s]*([^\\n]+)",
  "type_boutique_en_ligne": "(boutique|magasin|commerce)\\s*(100%\\s*)?en\\s*ligne",
  "type_boutique_physique": "(boutique|magasin|commerce)\\s*physique",
  "emplacement_precis": "emplacement[:\\s]*([^\\n]+)",
  "adresse_complete": "adresse[:\\s]*([^\\n]+)",
  "localisation_exacte": "(situé|située|localisé|localisée)\\s*([^\\n]+)",
  "quartier_ville": "(quartier|commune|ville)[:\\s]*([a-zA-ZÀ-ÿ\\s-]+)",
  "rue_avenue": "(rue|avenue|boulevard|av\\.)[:\\s]*([^\\n]+)",
  "point_repere": "(près\\s*de|à\\s*côté\\s*de|face\\s*à|derrière)[:\\s]*([^\\n]+)"
}
